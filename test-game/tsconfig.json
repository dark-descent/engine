{
	"compilerOptions": {
		"lib": [
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2022",
			"ES2021"
		],
		"target": "ESNext",
		"module": "ESNext",
		"types": [
			"./types"
		],
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"include": [
		"./src/**/*"
	]
}